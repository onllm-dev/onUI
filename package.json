{
  "name": "onui",
  "version": "1.0.12",
  "private": true,
  "description": "Browser extension for annotating UI elements for AI agents",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "pnpm --filter @onui/extension dev",
    "build": "pnpm --filter @onui/extension build",
    "build:mcp": "pnpm --filter @onui/mcp-server build",
    "setup:mcp": "pnpm --filter @onui/mcp-server run setup",
    "doctor:mcp": "pnpm --filter @onui/mcp-server run doctor",
    "lint": "eslint packages/*/src --ext .ts,.tsx"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  }
}
